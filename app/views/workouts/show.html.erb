
    <h3><%= @workout.name %></h3>

</br>
<p>
    <% if @workout.exercises.count === 0 %>
      <%= "This workout has no exercises, add some here" %>
      <%= link_to "add exercise", new_workout_exercise_path(@workout), :class => "add_workout_exercise" %>
    <% else %>
      <% @workout.exercises.all.each do |exercise| %>
        <%= exercise.name %>
        <% end %>
    <% end %>
</p>



<%= render 'exercises/form'%>
